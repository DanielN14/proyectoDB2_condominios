@{
    ViewData["Title"] = "Visitas";
}

@await Html.PartialAsync("AccesoUsuarios")


<div class="container" style="height: auto; width: auto; text-align: center; padding-top: 50px; ">
    <div class="row" style=" height: auto; width: 700px; margin: 0px auto; ">
        <form class="form" asp-controller="Seguridad" asp-action="Visitas_Guarda" enctype="multipart/form-data">
            <div class="form-group col-xs-12 col-sm-12 col-md-12">
                <div class="col-xs-5 col-md-5">
                    <input hidden="hidden" type="text" class="form-control form-control-sm mb-2" name="idProyectoHabitacional" value="@ViewData["idProyectoHabitacional"]" />
                    <input type="text" class="form-control form-control-sm mb-2" name="busqueda" value="" />
                </div>
                <div class="col-xs-2 col-md-2">
                    <button class="btn btn-success" type="submit">Buscar</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    @* Visitas tradicionales *@
    <div class="col-lg-10 col-md-12 col-sm-12" style="margin: 0 auto;">
        <h4 style="text-align: center;">Visitas tradicionales
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 26 26"
                style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;">
                <path d="M11 12h6v6h-6z"></path>
                <path d="M19 4h-2V2h-2v2H9V2H7v2H5c-1.103 0-2 .897-2 2v14c0 1.103.897 2 2 2h14c1.103 0 2-.897
        2-2V6c0-1.103-.897-2-2-2zm.001 16H5V8h14l.001 12z">
                </path>
            </svg>
        </h4>
        <hr />
        @if (((IEnumerable<dynamic>)ViewBag.VisitasTradicionales_Guarda).Count() > 0)
        {
            <div class="table-responsive">
                <table class="table caption-top table-sm">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Fecha entrada</th>
                            <th scope="col">Número de vivienda</th>
                            <th scope="col">Residente</th>
                            <th scope="col">Visitante</th>
                            <th scope="col">Cédula Visitante</th>
                            <th scope="col">Condominio</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var visitaTradicional in ViewBag.VisitasTradicionales_Guarda)
                        {
                            <tr>
                                @{
                                    <th>@visitaTradicional.idVisita</th>
                                    <td>@visitaTradicional.FechaEntrada</td>
                                    <td>@visitaTradicional.numeroVivienda</td>
                                    <td>@visitaTradicional.nombreResidente</td>
                                    <td>@visitaTradicional.nombreVisitante</td>
                                    <td>@visitaTradicional.cedulaVisitante</td>
                                    <td>@visitaTradicional.condominio</td>
                                }
                                <td class="actions">
                                    <button class="btn btn-primary btn-sm"
                                onclick="window.location='@Url.Action("MarcarSalida", "Seguridad", new {idVisita=@visitaTradicional.idVisita})'">
                                        Marcar salida
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="mt-4">
                <h5>No se han agregado visitas tradicionales</h5>
            </div>
        }
    </div>

    @* Visitas de delivery *@
    <div class="col-lg-10 col-md-12 col-sm-12 mt-5" style="margin: 0 auto;">
        <h4 style="text-align: center;">Visitas de delivery
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-moped" width="28" height="28"
                viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <circle cx="18" cy="17" r="2"></circle>
                <path d="M5 16v1a2 2 0 0 0 4 0v-5h-3a3 3 0 0 0 -3 3v1h10a6 6 0 0 1 5 -4v-5a2 2 0 0 0 -2 -2h-1"></path>
                <line x1="6" y1="9" x2="9" y2="9"></line>
            </svg>
        </h4>
        <hr />
        @if (((IEnumerable<dynamic>)ViewBag.VisitasDelivery_Guarda).Count() > 0)
        {
            <div class="table-responsive">
                <table class="table caption-top table-sm">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Fecha de entrada</th>
                            <th scope="col">Número de vivienda</th>
                            <th scope="col">Residente</th>
                            <th scope="col">Proveedor de delivery</th>
                            <th scope="col">Condominio</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var visitasDelivery in ViewBag.VisitasDelivery_Guarda)
                        {
                            <tr>
                                @{
                                    <th>@visitasDelivery.idVisita</th>
                                    <td>@visitasDelivery.FechaEntrada</td>
                                    <td>@visitasDelivery.numeroVivienda</td>
                                    <td>@visitasDelivery.nombreResidente</td>
                                    <td>@visitasDelivery.proveedorDelivery</td>
                                    <td>@visitasDelivery.condominio</td>
                                }
                                <td class="actions">
                                    <button class="btn btn-primary btn-sm"
                                onclick="window.location='@Url.Action("MarcarSalida", "Seguridad", new {idVisita=@visitasDelivery.idVisita})'">
                                        Marcar salida
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="mt-4">
                <h5>No se han agregado visitas de delivery</h5>
            </div>
        }
    </div>
</div>

