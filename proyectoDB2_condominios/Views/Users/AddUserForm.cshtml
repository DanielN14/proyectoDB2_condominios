@{
    ViewData["Title"] = "Registro de usuarios";
}

<div class="row justify-content-md-center mt-4">
    <div class="card align-items-center" style="width: 30rem;">
        <div class="card-body">
            <form class="row g-3" asp-controller="Cards" asp-action="InsertCard" enctype="multipart/form-data">
                <div class="col-12">
                    <label for="inputAddress" class="form-label">Dueño de la tarjeta</label>
                    <input type="text" class="form-control" name="txtOwner" required />
                </div>
                <div class="col-lg-8">
                    <label for="inputAddress2" class="form-label">Número de tarjeta</label>
                    <input type="text" class="form-control" name="txtCardNumber" placeholder="**** **** **** ****" required />
                </div>
                <div class="col-lg-4 col-md">
                    <label for="inputCity" class="form-label">CVV</label>
                    <input type="text" class="form-control" name="txtCVV" required />
                </div>
                <div class="row mt-3">
                    <label for="inputAddress2" class="form-label">Fecha de expiración</label>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <select class="form-select" name="selMonth" required>
                            <option selected disabled value="">Mes</option>
                            <option value="01">Enero</option>
                            <option value="02">Febrero</option>
                            <option value="03">Marzo</option>
                            <option value="04">Abril</option>
                            <option value="05">Mayo</option>
                            <option value="06">Junio</option>
                            <option value="07">Julio</option>
                            <option value="08">Agosto</option>
                            <option value="09">Septiembre</option>
                            <option value="10">Octubre</option>
                            <option value="11">Noviembre</option>
                            <option value="12">Diciembre</option>
                        </select>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <select class="form-select" name="selYear" required>
                            <option selected disabled value="">Año</option>
                            <option value="2022">2022</option>
                            <option value="2023">2023</option>
                            <option value="2024">2024</option>
                            <option value="2025">2025</option>
                            <option value="2026">2026</option>
                            <option value="2027">2027</option>
                        </select>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <label for="inputAddress2" class="form-label">Banco</label>
                        <select class="form-select" name="selBank" required>
                            <option selected disabled value="">Seleccione el Banco</option>
                            @* @foreach (var bank in ViewBag.banks)
                            {
                                <option value="@bank.BankId">@bank.BankName</option>
                            } *@
                        </select>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <label for="inputAddress2" class="form-label">Emisor</label>
                        <select class="form-select" name="selIssuer" required>
                            <option selected disabled value="">Seleccione el emisor</option>
                            @* @foreach (var issuer in ViewBag.issuers)
                            {
                                <option value="@issuer.IssuerId">@issuer.IssuerName</option>
                            } *@
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Imagen</label>
                    <input class="form-control" type="file" id="inputPhoto" name="inputPhoto"/>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary"  onclick="getValueInput()">Agregar</button>
                </div>
            </form>
        </div>
    </div>
</div>

