@{
    ViewData["Title"] = "Editor de visitas Delivery";
}

@await Html.PartialAsync("AccesoUsuarios")


<div class="container">
    <form class="form" asp-controller="Visitas" asp-action="UpdateVisita_Delivery" enctype="multipart/form-data">
        <div style="border: 1px solid #d5d7dd; padding: 30px; border-radius: 15px;">
            <div class="row">
                <div class="text-center">
                    <h4>Editar Visita Delivery</h4>
                    <hr>
                </div>
                @foreach (var item in ViewBag.visitasDelivery)
                        {
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-12 col-sm-12">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <label for="fechaEntrada" class="form-label">Fecha de entrada</label>
                                <input type="datetime-local" class="form-control form-control-sm mb-2" name="fechaEntrada" value="@item.FechaEntrada"
                                    required />
                        </div>
                        <div class="col-lg-8 col-md-12 col-sm-12 p-3" id="divFormDelivery">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="row">
                                        <label for="selectDelivery" class="form-label">Proveedor de delivery</label>
                                        <select class="form-select form-select-sm mb-2" name="selectDelivery"
                                                id="selectDelivery" value="">
                                                <option selected disabled value="">
                                                    @item.proveedorDelivery
                                            </option>
                                            <option value="UberEats">UberEats</option>
                                            <option value="Didi">Didi</option>
                                            <option value="Rappi">Rappi</option>
                                            <option value="PedidosYa">PedidosYa</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="col-lg-4 col-md-12 col-sm-12 align-self-center">
                        <div class="form-group">
                            <div class="col-12">
                                <button class="btn btn-white float-end" type="reset">Limpiar</button>
                                        <button class="btn btn-success float-end" value="@item.idVisita" name="idVisita"
                                        type="submit">
                                    Guardar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
        </div>
    </form>
</div>