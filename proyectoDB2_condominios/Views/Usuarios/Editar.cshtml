@{
    ViewData["Title"] = "Editar usuarios";
}

<div class="container">
    @foreach (var item in @ViewBag.usuario)
    {
        <form class="form" asp-controller="Usuarios" asp-action="UpdateUsuario" enctype="multipart/form-data">
            <div style="border: 1px solid #d5d7dd; padding: 30px; border-radius: 15px;">
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-12">
                        <div class="container-profile">
                            <div class="avatar-upload">
                                <div class="avatar-edit">
                                    <input type='file' id="inputPhoto" name="inputPhoto" accept=".png, .jpg, .jpeg" />
                                    <label for="inputPhoto"></label>
                                </div>
                                <div class="avatar-preview">
                                    <div id="imagePreview"
                                     style="background-image: url(@item.foto);">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-12">
                        <div class="text-center">
                            <h4>Editar usuarios</h4>
                            <hr>
                        </div>
                        <div class="row">
                            <input hidden="hidden" name="idPersona" value="@item.idPersona">
                            <input hidden="hidden" name="idUsuario" value="@item.idUsuario">
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <label for="txtNombre" class="form-label">Nombre</label>
                                <input type="text" value="@item.nombre" class="form-control form-control-sm mb-2" name="txtNombre" required />
                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <label for="txtPApellido" class="form-label">Primer Apellido</label>
                                <input type="text" value="@item.primerApellido" class="form-control form-control-sm mb-2" name="txtPApellido" required />
                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <label for="txtSApellido" class="form-label">Segundo Apellido</label>
                                <input type="text" value="@item.segundoApellido" class="form-control form-control-sm mb-2" name="txtSApellido" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-5 col-md-4 col-sm-12">
                                <label for="txtCedula" class="form-label">Cédula</label>
                                <input type="text" value="@item.cedula" class="form-control form-control-sm mb-2" name="txtCedula" required />
                            </div>
                            <div class="col-lg-7 col-md-8 col-sm-12">
                                <label for="txtEmail" class="form-label">Correo Electrónico</label>
                                <input type="email" value="@item.email" class="form-control form-control-sm mb-2" name="txtEmail" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <label for="txtPassword" class="form-label">Contraseña</label>
                                <input type="password" value="@item.password" class="form-control form-control-sm mb-2" name="txtPassword"
                                   required />
                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <label for="selectRol" class="form-label">Rol del usuario</label>
                                <select class="form-select form-select-sm mb-2" name="selectRol" required>
                                    <option selected disabled value="">@item.nombreRol</option>
                                    @foreach (var roles in ViewBag.rolesUsuarios)
                                    {
                                        <option value="@roles.idRolUsuario">@roles.nombreRol</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <br>
                        <div class="form-group float-end">
                            <div class="col-12">
                                <button class="btn btn-white" type="reset">Limpiar</button>
                                <button class="btn btn-success" type="submit">Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
</div>