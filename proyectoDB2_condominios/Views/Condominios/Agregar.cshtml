@{
    ViewData["Title"] = "Agregar";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Lato|Liu+Jian+Mao+Cao&display=swap" rel="stylesheet">
</head>


<div class="contenedor d-flex justify-content-center align-items-center h-100" style="">
    <form method="post" action="@Url.Action("AgregarCondominio", "Condominios")" enctype="multipart/form-data">
        <div class="card" style="width:350px; height:350px">
            <div class="card-header">
                <h5 class="mb-0"><b>Nueva Condominio</b></h5>
            </div>
            <div class="card-body">
                <div class="form-outline mb-2">
                    <input type="text" id="codigo" name="codigo" class="form-control" required />
                    <label class="form-label" for="codigo">Codigo:</label>
                </div>
                <div class="form-outline mb-2">
                    <input type="text" id="nombre" name="nombre" class="form-control" required />
                    <label class="form-label" for="nombre">Nombre:</label>
                </div>
                <div class="form-outline mb-2">
                    <input type="text" id="direccion" name="direccion" class="form-control" required />
                    <label class="form-label" for="direccion">Direccion:</label>
                </div>
                <div class="form-outline mb-2">
                    <input type="text" id="telefonoOficina" name="telefonoOficina" class="form-control" required />
                    <label class="form-label" for="telefonoOficina">Telefono:</label>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-success" style="float:right"><b>Agregar</b></button>
    </form>
    <form asp-controller="Condominios" asp-action="Index" method="post">
        <button type="submit" class="btn btn-danger" style="float:left"><b>Cancel</b></button>
    </form>

</div>
</div>