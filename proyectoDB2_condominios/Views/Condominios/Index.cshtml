@{
    ViewData["Title"] = "Condominios";
}
<style>

</style>

<body background="Images\wallpaper_1.jpg" style="background-size: cover;">

    <div class="container d-flex justify-content-center align-items-center" style="margin-top:1%; width:1260px; height:620px">
        @foreach (var item in ViewBag.Condominios){
            <div class="card align-items-center" style="width: 13rem; margin-right:10px">
            <img src="@item.logo" class="card-img-top" style="width:120px; height:120px; margin-top:10px">
                <div class="card-body align-items-center">
                    <h4 class="card-title">@item.nombre</h4>

                    <p class="card-text"> <img src="/Iconos/ubicacion.png" style="width:20px; height:20px">@item.direccion</p>

                    <p class="card-text"> <img src="/Iconos/Telefono.png" style="width:20px; height:20px"> @item.telefonoOficina</p>
                    <div  style="float:right">
                        <a href="@Url.Action("Editar", "Condominios", new {idProyectoHabitacional=@item.idProyectoHabitacional})">
                        <button class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i>
                        </button>
                        </a>
                        <a href="@Url.Action("EliminarCondominio", "Condominios", new {idProyectoHabitacional=@item.idProyectoHabitacional})">
                        <button class="btn btn-danger btn-sm">
                          
                           
                            <i class="bi bi-trash-fill"></i>
                        </button>
                        </a>
                    </div>
            </div>
        </div>
        }
    </div>
    <div class="container d-flex justify-content-center align-items-center"><a href="@Url.Action("Agregar", "Condominios")"><img src="Iconos\btnAgregar.png" style="width:50px; height:50px" /></a></div>
</body>
