@{
    ViewData["Title"] = "Editar Condominio";
}
@Html.Partial("AccesoUsuarios")

<div class="container">
     @foreach (var item in @ViewBag.condominio)
    {
    <form class="form" asp-controller="Condominios" asp-action="UpdateCondominio" enctype="multipart/form-data">
        <div style="border: 1px solid #d5d7dd; padding: 30px; border-radius: 15px;">
          <input hidden="hidden" name="idProyectoHabitacional" value="@item.idProyectoHabitacional">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div class="container-profile">
                        <div class="avatar-upload">
                            <div class="avatar-edit">
                                <input type='file' id="inputPhoto" name="inputPhoto" accept=".png, .jpg, .jpeg" />
                                <label for="inputPhoto"></label>
                            </div>
                            <div class="avatar-preview">
                                <div id="imagePreview"
                                     style="background-image: url(@item.logo);">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-8 col-sm-12">
                    <div class="text-center">
                        <h4>Editar condominios</h4>
                        <hr>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <label for="nombre" class="form-label">Nombre Condominio:</label>
                                <input type="text" value="@item.nombre" class="form-control form-control-sm mb-2" name="nombre" required />
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <label for="direccion" class="form-label">Dirección:</label>
                            <input type="text" value="@item.direccion" class="form-control form-control-sm mb-2" name="direccion" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-5 col-md-4 col-sm-12">
                            <label for="telefonoOficina" class="form-label">Telefono:</label>
                            <input type="text" value="@item.telefonoOficina" class="form-control form-control-sm mb-2" name="telefonoOficina" required />
                        </div>
                    </div>
                    <br>
                    <div class="form-group float-end">
                        <div class="col-12">
                            <button class="btn btn-white" type="reset">Limpiar</button>
                            <button class="btn btn-success" type="submit">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    }
</div>
