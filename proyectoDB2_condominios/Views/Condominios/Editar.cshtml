@{
    ViewData["Title"] = "Editar";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Lato|Liu+Jian+Mao+Cao&display=swap" rel="stylesheet">
</head>


<div class="container d-flex justify-content-center align-items-center" style="">
    @foreach (var item in @ViewBag.condominio)
    {
        <form method="post" action="@Url.Action("UpdateCondominio", "Condominios")" enctype="multipart/form-data">
            <div class="card" style="width:350px; height:350px">
                <div class="card-header">
                    <h5 class="mb-1"><b>Editar Condominio</b></h5>
                </div>
                <div class="card-body">
                    <input hidden="hidden" name="idProyectoHabitacional" value="@item.idProyectoHabitacional">
                    <div class="form-outline mb-2">
                        <input type="text" value="@item.nombre" id="nombre" name="nombre" class="form-control" required />
                        <label class="form-label" for="nombre">Nombre:</label>
                    </div>

                    <div class="form-outline mb-2">
                        <input type="text" id="direccion" value="@item.direccion" name="direccion" class="form-control" required />
                        <label class="form-label" for="direccion">Direccion:</label>
                    </div>
                    <div class="form-outline mb-2">
                        <input type="text" id="telefonoOficina" value="@item.telefonoOficina" name="telefonoOficina" class="form-control" required />
                        <label class="form-label" for="telefonoOficina">Telefono:</label>
                    </div>
                </div>
                <div class="card-footer bg-gradient">
                    <button type="button" class="btn btn-danger" onclick="eliminar(@item.idProyectoHabitacional)" style="float:left"><b>Eliminar</b></button>
                    <button type="submit" class="btn btn-success" style="float:right"><b>Guardar</b></button>
                </div>
        </form>

    }

</div>
<script>
    function eliminar(idProyectoHabitacional) {
        var api = new XMLHttpRequest();
        api.open("GET", "/Condominios/EliminarCondominio?idProyectoHabitacional=" + idProyectoHabitacional);
        api.send();

    }
</script>
